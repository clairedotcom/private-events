<div class="event-container">
  <div class="event-col">
    <div class="col-header">
      <h1><%= @event.name %></h1>
    </div>
    <div class="event-card">
      <h3>Date</h3>
      <p><%= @event.pretty_date %></p>
      <h3>Host</h3>
      <p><%= link_to "#{@event.creator.name}", @event.creator %></p>
      <h3>Description</h3>
      <p><%= @event.description %></p>
      <h3>Event Attendees</h3>
      <% @event.attendees.each do |attendee| %>
        <p><%= attendee.name%></p>
      <% end %>
      <div class="button-container">
        <button class="card-btn"><%= link_to "Back", root_path %></button>

        <% if user_signed_in? %>
          <button class="card-btn"><%= link_to "Sign Up", attend_event_path(@event.id) %></button>
        <% end %>

        <% if @event.creator == current_user %>
          <button class="card-btn"><%= link_to "Edit Event", edit_event_path %></button>
          <button class="card-btn"><%= link_to "Delete Event", @event, method: :delete, data: { confirm: "Are you sure?"} %></button>
        <% end %>

        <% if @event.attendees.include? current_user %>
          <button class="card-btn"><%= link_to "Unattend Event", unattend_event_path(@event.id) %></button>
        <% end %>
      </div>


    </div>
  </div>
</div>