<div class="event-container">
  <div class="event-col">
    <h2 class="col-header">Upcoming Events</h2>
    <% @events.upcoming.each do |event| %>
      <div class="event-card">
        <h2 class="event-title"><%= event.name %></h2>
        <p><%= event.date %></p>
        <p>Event Host: <%= event.creator.name %></p>
        <p><%= link_to "See details", event %></p> 
      </div>
    <% end %>
  </div>
  <div class="event-col">
    <h2 class="col-header">Past Events</h2>
    <% @events.past.each do |event| %>
      <div class="event-card">
        <h2 class="event-title"><%= event.name %></h2>
        <p><%= event.date %></p>
        <p>Event Host: <%= event.creator.name %></p>
        <p><%= link_to "See details", event %></p>
      </div>
    <% end %>
  </div>
</div>
