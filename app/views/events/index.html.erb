<h2>Upcoming Events</h2>
<% @events.upcoming.each do |event| %>
  <h2><%= event.name %></h2>
  <strong><%= event.date %></strong><br>
  <strong>Event Host: <%= event.creator.name %></strong>
  <p><%= link_to "See details", event %></p>
<% end %>
<br>
<h2>Past Events</h2>
<% @events.past.each do |event| %>
  <h2><%= event.name %></h2>
  <strong><%= event.date %></strong><br>
  <strong>Event Host: <%= event.creator.name %></strong>
  <p><%= link_to "See details", event %></p>
<% end %>