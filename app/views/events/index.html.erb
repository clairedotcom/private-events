<div class="event-container">
  <div class="event-col">
    <h2>Upcoming Events</h2>
    <% @events.upcoming.each do |event| %>
      <h2><%= event.name %></h2><br>
      <strong><%= event.date %></strong><br>
      <strong>Event Host: <%= event.creator.name %></strong><br>
      <p><%= link_to "See details", event %></p> 
    <% end %>
</div>
<div class="event-col">
  <h2>Past Events</h2>
  <% @events.past.each do |event| %>
    <h2><%= event.name %></h2>
    <strong><%= event.date %></strong><br>
    <strong>Event Host: <%= event.creator.name %></strong>
    <p><%= link_to "See details", event %></p>
  <% end %>
</div>
</div>
